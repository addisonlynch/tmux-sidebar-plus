LAYOUT_NAME="default"
PANES=1
MINIMUM_WIDTH="80"

populate_sidebar() {
    local sidebar_id="$1"
    local command
    tmux select-pane -t "$sidebar_id"
    if type -p "glances" > /dev/null; then
        command='glances'
    if type -p "htop" > /dev/null; then
        command='htop'
    else
        command='top'
    fi
    tmux send-keys -t "${sidebar_id}" "${command}" Enter
    select_base_pane
}
